{
  "env": {
      "browser": true
  },
  "extends": [
      "plugin:react/recommended",
      "airbnb"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "react"
  ],
  "rules": {
      "react/no-unused-styles": 2,
      "react/split-platform-components": 2,
      "react/no-inline-styles": 2,
      "react/no-color-literals": 2,
      "react/no-raw-text": 2,
  }
}